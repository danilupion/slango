{
  "name": "@slango/ristretto",
  "version": "1.0.21",
  "private": false,
  "description": "Opinionated rest client",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./abortable": {
      "import": "./dist/abortable/index.js",
      "types": "./dist/abortable/index.d.ts"
    },
    "./middleware": {
      "import": "./dist/middleware/index.js",
      "types": "./dist/middleware/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:force": "tsc -p tsconfig.build.json --incremental false",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "build:check": "tsc --noEmit",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix --max-warnings 0",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@slango/tessera": "workspace:*"
  },
  "devDependencies": {
    "@slango.configs/eslint": "workspace:*",
    "@slango.configs/typescript": "workspace:*",
    "@slango.configs/vitest": "workspace:*",
    "@types/node": "25.0.10",
    "@vitest/coverage-v8": "4.0.18",
    "@vitest/ui": "4.0.18",
    "eslint": "9.39.2",
    "type-fest": "5.4.1",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  }
}
